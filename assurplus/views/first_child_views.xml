<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="first_child_view1">
            <field name="name">first_child.form</field>
            <field name="model">assurplus.first_child</field>
            <field name="arch" type="xml">
                <form string="Child Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="champ_test"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <record model="ir.ui.view" id="first_child_view2">
            <field name="name">first_child.tree</field>
            <field name="model">assurplus.first_child</field>
            <field name="arch" type="xml">
                <tree string="arbre">
                    <field name="name"/>
                    <field name="champ_test"/>
                </tree>
            </field>
    </record>


    <record model="ir.actions.act_window" id="first_child_action">
            <field name="name">First Child</field>
            <field name="res_model">assurplus.first_child</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="first_child"
                  name="First Child"
                  sequence="1"
                  parent="first_parent"
                  action="first_child_action" />
</odoo>